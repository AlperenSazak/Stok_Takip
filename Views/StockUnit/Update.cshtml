@model StockUnit
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body">
                    <form method="post" id="updateStockUnitForm" class="update-form" asp-action="UpdateStockUnit">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="form-group">
                            <label for="unitCode">Birim Kodu</label>
                            <input type="text" name="unitCode" id="unitCode" class="form-control" placeholder="Birim Kodu" value="@Model.UnitCode" />
                        </div>
                        <div class="form-group">
                            <label for="description">Açıklama</label>
                            <input type="text" name="description" id="description" class="form-control" placeholder="Açıklama" value="@Model.Description" />
                        </div>
                        <div class="form-group">
                            <label for="purchasePrice">Alış Fiyatı</label>
                            <input type="text" disabled class="form-control" value="@Model.PurchasePrice" />
                            <input type="number" name="purchasePrice" id="purchasePrice" class="form-control mt-3" placeholder="Alış Fiyatı" value="@Model.PurchasePrice" />
                        </div>
                        <div class="form-group">
                            <label for="salePrice">Satış Fiyatı</label>
                            <input type="text" disabled class="form-control" value="@Model.SalePrice" />
                            <input type="number" name="salePrice" id="salePrice" class="form-control mt-3" placeholder="Satış Fiyatı" value="@Model.SalePrice" />
                        </div>
                        <div class="form-group">
                            <label for="paperWeight">Kağıt Ağırlığı</label>
                            <input type="text" disabled class="form-control" value="@Model.PaperWeight" />
                            <input type="number" name="paperWeight" id="paperWeight" class="form-control mt-3" placeholder="Kağıt Ağırlığı" value="@Model.PaperWeight" />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function(){
            //validation start
            $("#updateStockUnitForm").validate({
                rules: {
                    "unitCode": {
                        required: true,
                        minlength: 3,
                        maxlength: 15
                    },                  
                    "description": {
                        required: true,
                        minlength: 5,
                        maxlength: 15
                    },
                    "purchasePrice": {
                        required: true,
                        number : true,
                    },                  
                    "salePrice": {
                        required: true,
                        number: true,
                    },
                    "paperWeight": {
                        required: true,
                        number: true,
                    }
                },
                messages: {
                    "unitCode": {
                        required: "Lütfen Stok Birim Kodu Giriniz",
                        minlength: "lütfen 3 Karakterlik Birim Kodu Giriniz",
                        maxlength: "lütfen 15 Karakterlik Birim Kodu Giriniz"
                    },
                    "description": {
                        required: "Lütfen Açıklama Giriniz",
                        minlength: "Lütfen 5 Karakterlik Açıklama Giriniz",
                        maxlength: "Lütfen 15 Karakterlik Açıklama Giriniz"
                    },
                    "purchasePrice": {
                        required: "Lütfen Bir Alış Fiyatı Giriniz",
                    },
                    "salePrice": {
                        required: "Lütfen Bir Satış Fiyatı Giriniz",
                    },
                    "paperWeight": {
                        required: "Lütfen Bir Kağıt Ağırlığı Giriniz",
                    }
                },
                wrap: 'div',
                errorPlacement: function (error, element) {
                    error.css({ 'margin-top': '10px' });
                    error.addClass("arrow alert alert-danger")
                    error.insertAfter(element);
                }
            });

            //validation end
        })
    </script>
}
